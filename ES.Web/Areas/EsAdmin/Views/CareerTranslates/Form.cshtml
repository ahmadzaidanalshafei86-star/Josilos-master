@model CareerTranslatesFormViewModel

@using System.Globalization
@using ES.Web.Areas.EsAdmin.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Translations"];
}

@section Styles {
        <link href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-5-theme/1.1.1/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-xl-12 mx-auto">
        <div class="card">
            <div class="card-body">
                <div class="border p-3 rounded">
                    <h6 class="mb-0 text-uppercase">
                        @((Model.TranslationId > 0)
                                ? Localizer["Edit translation"]
                                : Localizer["Add translation"])
                    </h6>
                    <hr>
                    <form asp-controller="CareerTranslates" method="post">
                        @Html.AntiForgeryToken()
                        <div class="row g-3">
                            @if (Model.TranslationId > 0)
                            {
                                    <input type="hidden" asp-for="TranslationId" />
                            }
                            <input type="hidden" asp-for="CareerId" /> <!--To get The career I am adding translation to -->
                            @if (Model.TranslationId == 0)
                            {
                                    <!-- Language -->
                                    <div class="col-6">
                                        <label for="language" class="form-label">@Localizer["Language"]</label>
                                        <select asp-for="LanguageId" asp-items="Model.Languages" class=" form-select">
                                        </select>
                                        <span asp-validation-for="LanguageId" class="text-danger"></span>
                                    </div>
                            }
                            <div class="col-12">
                                <label class="form-label">@Localizer["Career Name"] <span class="text-danger">*</span></label>
                                <input asp-for="JobTitle" class="form-control col-6" required />
                                <span class="text-danger d-block mt-1" asp-validation-for="JobTitle"></span>
                            </div>

                            <!-- Description -->
                            <div class="col-12">
                                <label class="form-label">@Localizer["Description"] <span class="text-danger">*</span></label>
                                <textarea asp-for="Description" id="tinyMCEDesc" class="form-control" rows="4" required></textarea>
                                <span class="text-danger d-block mt-1" asp-validation-for="Description"></span>
                            </div>

                            <!-- Location -->
                            <div class="col-12">
                                <label class="form-label">@Localizer["Location"] <span class="text-danger">*</span></label>
                                <input asp-for="Location" class="form-control col-6" required />
                                <span class="text-danger d-block mt-1" asp-validation-for="Location"></span>
                            </div>
                        </div>

                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary">@Localizer["Submit"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script src="~/CMS/js/tinyMce.js"></script>
}

