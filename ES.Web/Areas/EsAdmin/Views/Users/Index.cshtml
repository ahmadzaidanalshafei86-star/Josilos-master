@model IEnumerable<UsersViewModel>

@using System.Globalization
@using ES.Web.Areas.EsAdmin.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Users"];
}

@section Styles {
    <link href="~/CMS/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
}

<h6 class="mb-0 text-uppercase">@Localizer["Users"]</h6>
<hr />
<div class="card">
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-2 ">
                <a asp-controller="Users" asp-action="Create" class="btn btn-success w-100 d-flex align-items-center justify-content-center">
                    <ion-icon class="lni lni-plus me-2" style="font-size: 1.2rem;"></ion-icon>
                    @Localizer["Add user"]
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="select-all" /></th>
                        <th>@Localizer["User name"]</th>
                        <th>@Localizer["Email"]</th>
                        <th>@Localizer["Role"]</th>
                        <th>@Localizer["Status"]</th>
                        <th>@Localizer["Creation Date"]</th>
                        <th>@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td><input type="checkbox" class="user-checkbox" value="@user.Id" /></td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@string.Join(" , ", user.Roles.ToList())</td>
                            <td>
                                <span class="badge bg-@(user.IsActive ? "success" : "danger")">
                                    @(user.IsActive ? "Active" : "Not Active")
                                </span>
                            </td>
                            <td>@user.CreatedDate</td>
                            <td>
                                <div class="col">
                                    <div class="dropdown">
                                        <button class="btn btn-outline-info dropdown-toggle d-flex align-items-center justify-content-center rounded-2 shadow-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <ion-icon class="lni lni-menu" role="img"></ion-icon>
                                        </button>
                                        <ul class="dropdown-menu border-0 shadow-lg rounded-3">
                                            <!-- Edit Button -->
                                            <li>
                                                <a class="dropdown-item d-flex align-items-center justify-content-start text-dark rounded-3 px-3 py-2 hover:bg-light"
                                                   asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="@Localizer["Edit"]">
                                                    <ion-icon class="lni lni-pencil-alt me-3" role="img"></ion-icon>
                                                    <span>@Localizer["Edit"]</span>
                                                </a>
                                            </li>
                                            <!-- Toggle Status Button -->
                                            <li>
                                                <a href="javascript:;" class="dropdown-item d-flex align-items-center justify-content-start text-dark rounded-3 px-3 py-2 hover:bg-light toggle-status"
                                                   data-user-id="@user.Id" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="@Localizer["Toggle status"]">
                                                    <ion-icon class="lni lni-shuffle me-3" role="img"></ion-icon>
                                                    <span>@Localizer["Toggle status"]</span>
                                                </a>
                                            </li>
                                            <!-- Reset Password Button -->
                                            <li>
                                                <a class="dropdown-item d-flex align-items-center justify-content-start text-dark rounded-3 px-3 py-2 hover:bg-light"
                                                   asp-controller="Users" asp-action="ResetPassword" asp-route-id="@user.Id" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="@Localizer["Reset Password"]">
                                                    <ion-icon class="lni lni-key me-3" role="img"></ion-icon>
                                                    <span>@Localizer["Reset Password"]</span>
                                                </a>
                                            </li>
                                            <!-- Delete Button -->
                                            <li>
                                                <a href="javascript:;" class="dropdown-item d-flex align-items-center justify-content-start text-dark rounded-3 px-3 py-2 hover:bg-light"
                                                   onclick="deleteUser('@user.Id', this)" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="@Localizer["Delete"]">
                                                    <ion-icon class="lni lni-trash me-3" role="img"></ion-icon>
                                                    <span>@Localizer["Delete"]</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>


                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            
        </div>
        <div class="row mt-3">
            <div class="col-3">
                <button id="submit-selected" class="btn btn-danger w-50 ">
                    @Localizer["Suspend"]
                </button>
            </div>
        </div>
    </div>
</div>

@section Plugins {
    <script src="~/CMS/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/CMS/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/CMS/assets/js/table-datatable.js"></script>
}

@section Scripts {
    <script>
        var currentLanguage = '@CultureInfo.CurrentCulture.Name'; // This will set the current language, e.g., "en-US" or "ar"
    </script>
    <script>
            // The hover of the buttons
            document.addEventListener('DOMContentLoaded', function () {
            // Initialize all tooltips on the page
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
    <script src="~/CMS/js/users.js"></script>
}




