@model IEnumerable<RolesViewModel>

@using System.Globalization
@using ES.Web.Areas.EsAdmin.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Roles"];
}

@section Styles {
    <link href="~/CMS/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/CMS/assets/css/style.css" rel="stylesheet" />
}

<h6 class="mb-0 text-uppercase">@Localizer["Roles"]</h6>
<hr />

<div class="card shadow-sm rounded-3">
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-12 col-md-3">
                <a asp-controller="Roles" asp-action="Create" class="btn btn-success w-100 d-flex align-items-center justify-content-center rounded-3 px-3 py-2 shadow-sm">
                    <ion-icon class="lni lni-plus me-2" style="font-size: 1.2rem;"></ion-icon>
                    @Localizer["Add new role"]
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table id="table" class="table table-striped table-bordered table-hover" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th>@Localizer["Role name"]</th>
                        <th>@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Name</td>
                            <td class="d-flex justify-content-start gap-2">
                                <a class="btn btn-outline-info btn-sm d-flex align-items-center" asp-controller="Roles" asp-action="ManagePermissions" asp-route-id="@role.Id">
                                    <ion-icon class="lni lni-cogs me-2" style="font-size: 1rem;"></ion-icon>@Localizer["Manage Permissions"]
                                </a>
                                <a href="javascript:;" class="btn btn-outline-danger btn-sm d-flex align-items-center" onclick="deleteRole('@role.Id', this)">
                                    <ion-icon class="lni lni-trash me-2" style="font-size: 1rem;"></ion-icon>@Localizer["Delete role"]
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Plugins {
    <script src="~/CMS/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/CMS/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/CMS/assets/js/table-datatable.js"></script>
}

@section Scripts {
    <script>
        var currentLanguage = '@CultureInfo.CurrentCulture.Name'; // This will set the current language, e.g., "en-US" or "ar"
    </script>
    <script src="~/CMS/js/roles.js"></script>
}
