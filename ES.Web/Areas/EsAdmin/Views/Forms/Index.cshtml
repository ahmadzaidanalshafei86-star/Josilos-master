@model IEnumerable<FormsViewModel>

@using System.Globalization
@using ES.Web.Areas.EsAdmin.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Forms"];
}
@section Styles {
    <link href="~/CMS/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/CMS/css/translationindex.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

}


<h6 class="mb-0 text-uppercase">@Localizer["Forms"]</h6>
<hr />
<div class="card">
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-3">
                <a asp-controller="Forms" asp-action="Create" class="btn btn-success w-100 d-flex align-items-center justify-content-center">
                    <ion-icon class="lni lni-plus me-2" style="font-size: 1.2rem;"></ion-icon>
                    @Localizer["Add New Form"]
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table id="table" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>@Localizer["Title"]</th>
                        <th>@Localizer["Publishing"]</th>
                        <th>@Localizer["Creation date"]</th>
                        <th>@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var form in Model)
                    {
                        <tr>
                            <td>@form.Title</td>
                            <td>
                                <span class="badge bg-@(form.IsActive ? "success" : "danger")">
                                    @(form.IsActive ? @Localizer["Active"] : @Localizer["Not active"])
                                </span>
                            </td>
                            <td>@form.CreatedAt.ToString()</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <!-- Edit Button -->
                                    <a class="me-2"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="top"
                                       data-bs-original-title="@Localizer["Content management"]"
                                       asp-controller="FormsTranslates" asp-action="Index" asp-route-formId="@form.Id">
                                        <ion-icon class="lni lni-pencil-alt md hover-scale text-warning" role="img"></ion-icon>
                                    </a>

                                    <!-- Publish Button -->
                                    <a class="me-2 toggle-status"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="top"
                                       data-bs-original-title="@(form.IsActive ? @Localizer["Deactivate"] : @Localizer["Activate"])"
                                       data-form-id="@form.Id">
                                        @if (form.IsActive)
                                        {
                                            <ion-icon class="lni lni-download md hover-scale text-success" role="img"></ion-icon>
                                        }
                                        else
                                        {
                                            <ion-icon class="lni lni-upload md hover-scale text-success" role="img"></ion-icon>
                                        }
                                    </a>

                                    <!-- Delete Button -->
                                    <a class="me-2"
                                       onclick="deleteForm('@form.Id', this)"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="top"
                                       data-bs-original-title="@Localizer["Delete Form"]">
                                        <i class="lni lni-trash md hover-scale text-danger"></i>
                                    </a>

                                    <a class="me-2"
                                       onclick="ExportSheet('@form.Id', this)"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="top"
                                       data-bs-original-title="@Localizer["Export answers as Excel"]">
                                        <i class="fa fa-file-excel md hover-scale text-success fa-lg"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Plugins {
    <script src="~/CMS/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/CMS/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/CMS/assets/js/table-datatable.js"></script>
}

@section Scripts {
    <script>
        var currentLanguage = '@CultureInfo.CurrentCulture.Name'; // This will set the current language, e.g., "en-US" or "ar"
    </script>
    
    <script>
            // The hover of the buttons
            document.addEventListener('DOMContentLoaded', function () {
            // Initialize all tooltips on the page
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });

    </script>
    <script src="~/CMS/js/formIndex.js"></script> 
}
