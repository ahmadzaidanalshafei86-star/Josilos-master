@model IEnumerable<ProductLabelViewModel>

@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Product Labels"];
}

@section Styles {
    <link href="~/CMS/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/CMS/css/translationindex.css" rel="stylesheet" />
}

<h6 class="mb-0 text-uppercase">@Localizer["Product Labels"]</h6>
<hr />
<div class="card">
    <div class="card-body">
        <div class="row mb-3 align-items-center">
            <div class="col-md-4">
                <button type="button" class="btn btn-success d-flex align-items-center justify-content-center shadow-sm rounded-3 w-100" data-bs-toggle="modal" data-bs-target="#addProductLabelModal">
                    <ion-icon class="lni lni-plus me-2" style="font-size: 1.4rem;"></ion-icon>
                    <span>@Localizer["Add New Label"]</span>
                </button>
            </div>
        </div>

        <div class="table-responsive">
            <table id="table" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>@Localizer["Name"]</th>
                        <th>@Localizer["Created At"]</th>
                        <th>@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var label in Model)
                    {
                        <tr>
                            <td>@label.Name</td>
                            <td>@label.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a class="edit-btn me-2"
                                       data-id="@label.Id"
                                       data-name="@label.Name"
                                       data-bs-toggle="modal"
                                       data-bs-target="#editProductLabelModal"
                                       data-bs-tooltip="tooltip"
                                       data-bs-placement="top"
                                       data-bs-original-title="@Localizer["Edit"]">
                                        <ion-icon class="lni lni-pencil-alt md hover-scale text-warning" role="img"></ion-icon>
                                    </a>

                                    <a class="trans-btn me-2"
                                       asp-controller="ProductLabelTranslations"
                                       asp-action="Index"
                                       asp-route-LabelId="@label.Id"
                                       data-bs-tooltip="tooltip"
                                       data-bs-placement="top"
                                       data-bs-original-title="@Localizer["Translations"]">
                                        <ion-icon class="lni lni-world md hover-scale text-info" role="img"></ion-icon>
                                    </a>

                                    <a class="delete-btn me-2"
                                       data-id="@label.Id"
                                       data-bs-tooltip="tooltip"
                                       data-bs-placement="top"
                                       data-bs-original-title="@Localizer["Delete"]">
                                        <ion-icon class="lni lni-trash md hover-scale text-danger" role="img"></ion-icon>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Modal -->
<div class="modal fade" id="addProductLabelModal" tabindex="-1" aria-labelledby="addProductLabelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addProductLabelModalLabel">@Localizer["Add Product Label"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addProductLabelForm" asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Name"]</label>
                        <input type="text" class="form-control @(ViewData.ModelState["Name"]?.Errors.Any() == true ? "is-invalid" : "")"
                               name="Name" maxlength="50" value="@(ViewData.ModelState["Name"]?.AttemptedValue)" />
                        @if (ViewData.ModelState["Name"]?.Errors.Any() == true)
                        {
                            <div class="invalid-feedback">
                                @ViewData.ModelState["Name"].Errors.First().ErrorMessage
                            </div>
                        }
                    </div>
                    <div class="mb-3">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editProductLabelModal" tabindex="-1" aria-labelledby="editProductLabelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProductLabelModalLabel">@Localizer["Edit Product Label"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editProductLabelForm" asp-action="Update" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Id" id="editId" />
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Name"]</label>
                        <input type="text" class="form-control" name="Name" id="editName" maxlength="30" required value="" />
                    </div>
                    <button type="submit" class="btn btn-primary">@Localizer["Update"]</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Plugins {
    <script src="~/CMS/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/CMS/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/CMS/assets/js/table-datatable.js"></script>
}

@section Scripts {
    <script>
        var currentLanguage = '@CultureInfo.CurrentCulture.Name';
        var hasValidationErrors = @Json.Serialize(ViewData.ModelState.Any());
    </script>
    <script src="~/CMS/js/ProductLabel.js"></script>
}