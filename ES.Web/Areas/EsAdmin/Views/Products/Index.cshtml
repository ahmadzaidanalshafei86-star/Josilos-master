@model IEnumerable<ProductViewModel>

@using System.Globalization
@using ES.Web.Areas.EsAdmin.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Products"];
}
@section Styles {
    <link href="~/CMS/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/CMS/css/translationindex.css" rel="stylesheet" />
}

<h6 class="mb-0 text-uppercase">@Localizer["Products"]</h6>
<hr />
<div class="card">
    <div class="card-body">
        <div class="row mb-3 align-items-center">
            <div class="col-12 col-md-4 mb-2">
                <a asp-controller="Products" asp-action="Create" class="btn btn-success d-flex align-items-center justify-content-center shadow-sm rounded-3 w-100">
                    <ion-icon class="lni lni-plus me-2" style="font-size: 1.4rem;"></ion-icon>
                    <span>@Localizer["Add new product"]</span>
                </a>
            </div>

            <div class="col-12 col-md-4 mb-2">
                <div class="input-group shadow-sm">
                    <span class="input-group-text bg-info text-white">
                        <ion-icon class="lni lni-funnel"></ion-icon>
                    </span>
                    <select id="categoryFilter" class="form-select">
                        <option value="">@Localizer["All Categories"]</option>
                        @foreach (var category in Model.SelectMany(p => p.CategoryNames).Distinct())
                        {
                            <option value="@category">@category</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table id="table" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@Localizer["Image"]</th>
                        <th>@Localizer["Name"]</th>
                        <th>@Localizer["Categories"]</th>
                        <th>@Localizer["Publishing"]</th>
                        <th>@Localizer["Creation Date"]</th>
                        <th>@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(product.FeaturedImageUrl))
                                {
                                    <img src="@Url.Content($"~/images/Products/{product.FeaturedImageUrl}")"
                                         alt="@product.FeaturedImageAltName"
                                         class="img-thumbnail"
                                         style="width: 50px; height: 50px; object-fit: cover;">
                                }
                                else
                                {
                                    <span>@Localizer["No Image"]</span>
                                }
                            </td>
                            <td>@product.Title</td>
                            <td>@string.Join(", ", product.CategoryNames)</td>
                            <td>
                                <span class="badge rounded-pill bg-@(product.IsPublished ? "success" : "danger")">
                                    @(product.IsPublished ? Localizer["Published"] : Localizer["Not Published"])
                                </span>
                            </td>
                            <td>@product.CreatedDate.ToString()</td>
                            <td>
                                <div class="d-flex flex-wrap gap-2">
                                    <a class="me-2"
                                       asp-controller="ProductTranslates"
                                       asp-action="Index"
                                       asp-route-productId="@product.Id"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="top"
                                       data-bs-original-title="@Localizer["Content Management"]">
                                        <ion-icon class="lni lni-pencil-alt md hover-scale text-warning"></ion-icon>
                                    </a>

                                    <a class="me-2"
                                       target="_blank"
                                       asp-controller="Products"
                                       asp-action="Index"
                                       asp-route-productSlug="@product.Slug"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="top"
                                       data-bs-original-title="@Localizer["Preview"]">
                                        <ion-icon class="lni lni-eye hover-scale md hover-scale text-info" role="img"></ion-icon>
                                    </a>

                                    <a class="me-2"
                                       asp-controller="Products"
                                       asp-action="ViewReviews"
                                       asp-route-productId="@product.Id"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="top"
                                       data-bs-original-title="@Localizer["Reviews"]">
                                        <ion-icon class="lni lni-star hover-scale md text-info"></ion-icon>
                                    </a>
                                    <a class="me-2 toggle-status"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="top"
                                       data-bs-original-title="@(product.IsPublished ? @Localizer["Unpublish"] : @Localizer["Publish"])"
                                       data-product-id="@product.Id">
                                        @if (product.IsPublished)
                                        {
                                            <ion-icon class="lni lni-download md text-success"></ion-icon>
                                        }
                                        else
                                        {
                                            <ion-icon class="lni lni-upload md text-success"></ion-icon>
                                        }
                                    </a>
                                    <a class="me-2"
                                       onclick="deleteProduct('@product.Id', this)"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="top"
                                       data-bs-original-title="@Localizer["Delete product"]">
                                        <i class="lni lni-trash md text-danger"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Plugins {
    <script src="~/CMS/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/CMS/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/CMS/assets/js/table-datatable.js"></script>
}

@section Scripts {
    <script>
        var currentLanguage = '@CultureInfo.CurrentCulture.Name';
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
     <script src="~/CMS/js/productIndex.js"></script> 
}

