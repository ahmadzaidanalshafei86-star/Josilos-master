@model IEnumerable<EcomCategoryViewModel>

@using System.Globalization
@using ES.Web.Areas.EsAdmin.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Product Categories"];
}
@section Styles {
    <link href="~/CMS/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/CMS/css/translationindex.css" rel="stylesheet" />
}

<h6 class="mb-0 text-uppercase">@Localizer["Product Categories"]</h6>
<hr />
<div class="card">
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-3">
                <a asp-controller="EcomCategories" asp-action="Create" class="btn btn-success w-100 d-flex align-items-center justify-content-center">
                    <ion-icon class="lni lni-plus me-2" style="font-size: 1.2rem;"></ion-icon>
                    @Localizer["Add new category"]
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table id="table" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>@Localizer["Image"]</th>
                        <th>@Localizer["Name"]</th>
                        <th>@Localizer["Parent category"]</th>
                        <th>@Localizer["Publishing"]</th>
                        <th>@Localizer["Creation Date"]</th>
                        <th>@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(category.FeaturedImageUrl))
                                {
                                    <img src=@Url.Content($"~/images/EcomCategories/{category.FeaturedImageUrl}") alt="@category.FeaturedImageAltName" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;">
                                }
                                else
                                {
                                    <span>@Localizer["No Image"]</span>
                                }
                            </td>
                            <td>@category.Name</td>
                            <td>@(string.IsNullOrEmpty(category.ParentCategoryName) ? Localizer["Root"] : category.ParentCategoryName)</td>
                            <td>
                                <span class="badge rounded-pill bg-@(category.IsPublished ? "success" : "danger")">
                                    @(category.IsPublished ? Localizer["Published"] : Localizer["Not Published"])
                                </span>
                            </td>
                            <td>@category.CreatedDate.ToString()</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a class="me-2"
                                       asp-controller="EcomCategoryTranslates"
                                       asp-action="Index"
                                       asp-route-categoryId="@category.Id"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="top"
                                       data-bs-original-title="@Localizer["Content Management"]">
                                        <ion-icon class="lni lni-pencil-alt md hover-scale text-warning" role="img"></ion-icon>
                                    </a>
                                    <a class="me-2"
                                       target="_blank"
                                       asp-controller="ProductCategories"
                                       asp-action="Details"
                                       asp-route-categorySlug="@category.Slug"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="top"
                                       data-bs-original-title="@Localizer["Preview"]">
                                        <ion-icon class="lni lni-eye hover-scale md hover-scale text-info" role="img"></ion-icon>
                                    </a>

                                    <a class="me-2 toggle-status"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="top"
                                       data-bs-original-title="@(category.IsPublished ? @Localizer["Unpublish"] : @Localizer["Publish"])"
                                       data-category-id="@category.Id">
                                        @if (category.IsPublished)
                                        {
                                            <ion-icon class="lni lni-download md hover-scale text-success" role="img"></ion-icon>
                                        }
                                        else
                                        {
                                            <ion-icon class="lni lni-upload md hover-scale text-success" role="img"></ion-icon>
                                        }
                                    </a>
                                    <a class="me-2"
                                       onclick="deleteCategory('@category.Id', this)"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="top"
                                       data-bs-original-title="@Localizer["Delete Category"]">
                                        <i class="lni lni-trash md hover-scale text-danger"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Plugins {
    <script src="~/CMS/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/CMS/assets/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/CMS/assets/js/table-datatable.js"></script>
}

@section Scripts {
    <script>
        var currentLanguage = '@CultureInfo.CurrentCulture.Name';
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
    <script src="~/CMS/js/ecomCategoryIndex.js"></script>
}
